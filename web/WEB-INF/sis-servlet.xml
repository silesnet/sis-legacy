<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
				"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>  

	<!-- Multiaction controller for various system actions -->
	<bean id="appMultiActionController" class="cz.silesnet.web.mvc.AppMultiActionController">
		<property name="methodNameResolver"><ref local="appViewMethodResolver"/></property>
        <property name="historyManager"><ref bean="historyManager"/></property>
	</bean>
	
	<bean id="appViewMethodResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
		<property name="paramName"><value>view</value></property>
	</bean>

	<!-- NodeWireless view controller -->
	<bean id="nodeWirelessViewController" class="cz.silesnet.web.mvc.NodeWirelessViewController">
		<property name="methodNameResolver"><ref local="appViewMethodResolver"/></property>
		<property name="nodeManager"><ref bean="nodeManager"/></property>
        <property name="labelManager"><ref bean="labelManager"/></property>
        <property name="historyManager"><ref bean="historyManager"/></property>
	</bean>

	<!-- NodeWireless edit form controller -->
	<bean id="nodeWirelessEditController" class="cz.silesnet.web.mvc.NodeWirelessEditController">        
		<property name="nodeManager"><ref bean="nodeManager"/></property>
        <property name="labelManager"><ref bean="labelManager"/></property>
        <property name="historyManager"><ref bean="historyManager"/></property>
		<property name="commandName"><value>node</value></property>
		<property name="validator"><ref bean="nodeWirelessEditValidator"/></property>
		<property name="formView"><value>wireless/editWireless</value></property>
		<property name="successView"><value>redirect:/net/wireless/view.html?view=viewMasterList</value></property>
	</bean>

	<!-- Wireless controller -->
	<bean id="wirelessController" class="cz.silesnet.web.mvc.WirelessController">
		<property name="methodNameResolver"><ref bean="actionMethodResolver"/></property>
		<property name="persistenceManager"><ref bean="nodeManager"/></property>
        <property name="historyManager"><ref bean="historyManager"/></property>
        <property name="labelManager"><ref bean="labelManager"/></property>
		<property name="commandName" value="wireless" />
	</bean>

	<bean id="nodeWirelessEditValidator" class="cz.silesnet.web.mvc.NodeWirelessEditValidator">
		<property name="nodeManager"><ref bean="nodeManager"/></property>
        <property name="labelManager"><ref bean="labelManager"/></property>
	</bean>

	<!-- Simple controller to serve jsp pages without need to generate model -->
	<bean id="urlFilenameViewController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController" />

	<bean id="actionMethodResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
		<property name="paramName"><value>action</value></property>
		<property name="methodParamNames">
			<value>insert,update,delete,cancel</value>
		</property>
	</bean>

	<!-- Service entity class controller -->
	<bean id="serviceController" class="cz.silesnet.web.mvc.ServiceController">
		<property name="methodNameResolver"><ref bean="actionMethodResolver"/></property>
        <property name="labelManager"><ref bean="labelManager"/></property>
        <property name="customerManager"><ref bean="customerManager"/></property>
		<property name="commandName"><value>service</value></property>
		<property name="formView"><value>service/editService</value></property>
	</bean>

	<!-- Customer entity class controller -->
	<bean id="customerController" class="cz.silesnet.web.mvc.CustomerController">
		<property name="methodNameResolver"><ref bean="actionMethodResolver"/></property>
        <property name="historyManager"><ref bean="historyManager"/></property>
        <property name="customerManager"><ref bean="customerManager"/></property>
        <property name="labelManager"><ref bean="labelManager"/></property>
        <property name="settingManager"><ref bean="settingManager"/></property>
        <property name="billingManager"><ref bean="billingManager"/></property>
		<property name="commandName"><value>customer</value></property>
		<property name="formView"><value>customer/editCustomer</value></property>
	</bean>

	<!-- Billing controller -->
	<bean id="billingController" class="cz.silesnet.web.mvc.BillingController">
		<property name="methodNameResolver"><ref bean="actionMethodResolver"/></property>
        <property name="billingManager"><ref bean="billingManager"/></property>
        <property name="historyManager"><ref bean="historyManager"/></property>
	</bean>

	<bean id="labelController" class="cz.silesnet.web.mvc.LabelController">
		<property name="methodNameResolver"><ref bean="actionMethodResolver"/></property>
		<property name="persistenceManager"><ref bean="labelManager" /></property>
		<property name="commandName" value="label" />
	</bean>
	

	<bean id="billDeliveryController" class="cz.silesnet.web.mvc.BillDeliveryController">
		<property name="billingController"><ref local="billingController"/></property>
	</bean>

	<bean id="defaultServletForwardingController" class="org.springframework.web.servlet.mvc.ServletForwardingController">
		<property name="servletName"><value>default</value></property>
	</bean>

	<bean id="urlMapping" 
          class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
				<entry key="/customer/*"><ref bean="customerController"/></entry>
				<entry key="/service/*"><ref local="serviceController"/></entry>
				<entry key="/billing/*"><ref local="billingController"/></entry>
				<entry key="/billing/confirmDelivery.html"><ref local="billDeliveryController"/></entry>
				<entry key="/net/wireless/*"><ref local="wirelessController"/></entry>
				<entry key="/label/*"><ref local="labelController"/></entry>
				<entry key="/index.html"><ref bean="urlFilenameViewController"/></entry>
				<entry key="/app/*"><ref bean="appMultiActionController"/></entry>
				<entry key="/*"><ref bean="defaultServletForwardingController"/></entry>
			</map>
		</property>
	</bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"><value>org.springframework.web.servlet.view.JstlView</value></property>
        <property name="prefix"><value>/WEB-INF/jsp/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>
</beans>